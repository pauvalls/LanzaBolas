<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:id="@+id/numberradio"
            android:layout_alignBaseline="@+id/radio"
            android:layout_alignBottom="@+id/radio"
            android:layout_toEndOf="@+id/radio"
            android:textSize="24sp" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:id="@+id/barradio"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Radio:  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:id="@+id/radio"
            android:layout_alignBottom="@+id/barradio"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <TextView
            android:text="masa: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2"
            android:textSize="24sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barmasa"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numbermasa"
            android:textSize="24sp"
            android:layout_below="@+id/barradio"
            android:layout_alignStart="@+id/numberradio" />
    </RelativeLayout>
</LinearLayout>